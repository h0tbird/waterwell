#!/bin/bash

#------------------------------------------------------------------------------
# Build and flash:
#------------------------------------------------------------------------------

arduino-builder \
-fqbn archlinux-arduino:avr:uno \
-hardware /usr/share/arduino/hardware \
-build-path ${PWD}/.build \
-libraries libs \
-tools /usr/bin \
wwtx.ino \
&& avrdude -V -F \
-C /etc/avrdude.conf \
-p atmega328p \
-P /dev/arduino/uno/1 \
-c arduino \
-b 115200 \
-U flash:w:${PWD}/.build/wwtx.ino.hex
